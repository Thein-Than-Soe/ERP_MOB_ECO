<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:xct="http://schemas.microsoft.com/dotnet/2021/maui/communitytoolkit"
           Size="400,400"
    xmlns:dg="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
    x:Class="CS.ERP_MOB.Views.ATT.FrmATTEffectivePopup">



    <StackLayout                              
                                VerticalOptions="FillAndExpand">

       <!-- <Entry x:Name="entSearch" Placeholder="Search"  WidthRequest="200"  HorizontalOptions="End"                           
                            PlaceholderColor="{StaticResource OvaSearchInputColor}"
                            TextColor="{StaticResource OvaSearchInputColor}"
                            TextChanged="entSearch_TextChanged"/> -->

        <dg:DataGrid 
                                    ItemsSource="{Binding ApplicantLoad.DAT_JOB_VACANCY}" 
                                    SelectionEnabled="True" 
                                    Style="{StaticResource dgStyle}"
                                    >

            <dg:DataGrid.Columns>

                <dg:DataGridColumn x:Name="Designation" Title="Designation" PropertyName="DesignationName" Width="*" />
                <dg:DataGridColumn x:Name="JD" Title="JD" PropertyName="JD" Width="2*"/>
                <dg:DataGridColumn x:Name="Status" Title="Status" PropertyName="StatusName" Width="*"/>
            </dg:DataGrid.Columns>

        </dg:DataGrid>
        <Grid>
            <Button Text="Ok" WidthRequest="100" Grid.Row="0" Grid.Column="0" ></Button>
            <Button Text="Cancel" WidthRequest="100" Grid.Row="0" Grid.Column="1"></Button>
        </Grid>

    </StackLayout>


</xct:Popup>