<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2021/maui/communitytoolkit"
             x:Class="CS.ERP_MOB.Views.Frame.FrmSeasonal">
  <ContentView.Content>
        <StackLayout
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <!--Header area-->
            <StackLayout
                x:Name="LayoutTitle"
                IsVisible="false"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal"
                HeightRequest="40"
                BackgroundColor="{StaticResource OvaListTitleColor}"
                Padding="{StaticResource padding}">
                <StackLayout
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="Start">
                    <Label
                        VerticalOptions ="CenterAndExpand"
                        HorizontalOptions="StartAndExpand"
                        Text="&#xf060;"
                        FontFamily="{StaticResource FontAwesomeSolid}"
                        FontSize="20"
                        TextColor="{StaticResource OvaFrontColor}"
                        Padding="{StaticResource OvaListFormHeaderIconPadding}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TgrBack_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
                <StackLayout
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
                    <Entry x:Name="entSearch"
                           Placeholder="Search"
                           HorizontalOptions="FillAndExpand"
                           PlaceholderColor="{StaticResource OvaFrontColor}"
                           TextColor="{StaticResource OvaFrontColor}"/>
                </StackLayout>
                <Frame
                    Padding="{StaticResource paddingListItem}"
                    HorizontalOptions="End"
                    VerticalOptions="FillAndExpand"
                    CornerRadius="3">
                    <StackLayout
                        Orientation="Vertical"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <Grid
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalOptions  ="CenterAndExpand"
                                HorizontalOptions="FillAndExpand"
                                Text="&#xf2f1;"
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                TextColor="{StaticResource OvaListIconColor}"
                                Padding="{StaticResource OvaListFormHeaderIconPadding}"
                                
                                >
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer/>
                                </Label.GestureRecognizers>
                            </Label>
                            <BoxView
                                Grid.Row="0"
                                Grid.Column="1"
                                VerticalOptions="FillAndExpand"
                                BackgroundColor="{StaticResource OvaListIconColor}"  />
                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalOptions  ="FillAndExpand"
                                
                                >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        VerticalOptions ="Center"
                                        HorizontalOptions="Center"
                                        Text="&#xf00a;"
                                        FontFamily="{StaticResource FontAwesomeSolid}"
                                        TextColor="{StaticResource OvaListIconColor}">
                                    </Label>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        VerticalOptions ="Center"
                                        HorizontalOptions="Center"
                                        Text="&#xf0dd;"
                                        FontFamily="{StaticResource FontAwesomeSolid}"
                                        TextColor="{StaticResource OvaListIconColor}"
                                        Padding="25,0,0,0">
                                    </Label>
                                </Grid>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                            <BoxView
                                Grid.Row="0"
                                Grid.Column="3"
                                VerticalOptions="FillAndExpand"
                                BackgroundColor="{StaticResource OvaListIconColor}"  />
                            <Label
                                Grid.Row="0"
                                Grid.Column="4"
                                VerticalOptions  ="CenterAndExpand"
                                Text="&#xf063;"
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                TextColor="{StaticResource OvaListIconColor}"
                                Padding="{StaticResource OvaListFormHeaderIconPadding}"
                                
                                >
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <StackLayout
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
                <ScrollView
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <Grid x:Name="GrdSeasonalList"
                          VerticalOptions="FillAndExpand"
                          HorizontalOptions="FillAndExpand"
                          Padding="{StaticResource padding}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollView>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>