<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="CS.ERP_MOB.Views.Frame.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:card="clr-namespace:CS.ERP_MOB.Views.Frame"
    xmlns:frm="clr-namespace:CS.ERP_MOB.Views.Frame"
    xmlns:general="clr-namespace:CS.ERP_MOB.General"
    xmlns:local="clr-namespace:CS.ERP_MOB.Services.SYS">
    <ContentView.Content>
        <ScrollView>
            <StackLayout
                Padding="{StaticResource padding}"
                HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                VerticalOptions="FillAndExpand">
                <frm:FrmSlider BackgroundColor="{Binding ThemeSettingSlider.PropertiesBgColor, Source={x:Static general:Common.mCommon}}" />
                <frm:FrmShelf BackgroundColor="{Binding ThemeSettingShelf.PropertiesBgColor, Source={x:Static general:Common.mCommon}}" />


            </StackLayout>
        </ScrollView>

    </ContentView.Content>
</ContentView>