<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CS.ERP_MOB.Views.POS.FrmPosSaleInvoiceSet"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CS.ERP_MOB.Views.POS"
    Title="Sale Invoice Detail">

    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <StackLayout.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Right" Swiped="OnSwipeRight" />
            </StackLayout.GestureRecognizers>
            <Label FontAttributes="Bold" Text="Invoice Code" />
            <Label Text="{Binding InvoiceCode_0_50}" />

            <Label FontAttributes="Bold" Text="Invoice Date" />
            <Label Text="{Binding InvoiceDate}" />

            <Label FontAttributes="Bold" Text="Grand Total" />
            <Label Text="{Binding GrandTotal}" />

            <!--  Add more fields as needed  -->
        </StackLayout>
    </ScrollView>
</ContentPage>
