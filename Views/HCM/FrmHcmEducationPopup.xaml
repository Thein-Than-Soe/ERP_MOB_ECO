<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:xct="http://schemas.microsoft.com/dotnet/2021/maui/communitytoolkit"
           Size="400,600"
    xmlns:dg="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
    x:Class="CS.ERP_MOB.Views.HCM.FrmHcmEducationPopup">

    <ScrollView>

        <StackLayout                              
                                VerticalOptions="FillAndExpand">
            
            <Entry
                            x:Name="entSearch"
                            Placeholder="Search" 
                           WidthRequest="200"
                            HorizontalOptions="End"                           
                            PlaceholderColor="{StaticResource OvaSearchInputColor}"
                            TextColor="{StaticResource OvaSearchInputColor}"
                            TextChanged="entSearch_TextChanged"/>
            <Entry x:Name="entMajor"  Text="{Binding DAT_APPLICANT_EDUCATION.Name}"  Placeholder="Major" />

            <Picker x:Name="pikEducationLevel" IsEnabled="True" ItemDisplayBinding="{Binding DAT_APPLICANT_EDUCATION.EducationLevelName}" Title="Select EducationLevel"/>
            <Entry x:Name="entPostalCode"  Text="{Binding DAT_APPLICANT_EDUCATION.Phone}"  Placeholder="Postal Code" />
            <Picker x:Name="pikSchool" IsEnabled="True" ItemDisplayBinding="{Binding DAT_APPLICANT_EDUCATION.SchoolName}"  Title="Select School" />
            <Entry x:Name="entGPA"  Text="{Binding DAT_APPLICANT_EDUCATION.GPA}"  Placeholder="GPA"  />
            <Entry x:Name="entReference"  Text="{Binding DAT_APPLICANT_EDUCATION.ReferenceDocument}"  Placeholder="Attach File" IsEnabled="False" />

            <Grid>
                <Button Text="Ok" WidthRequest="100" Grid.Row="0" Grid.Column="0" ></Button>
                <Button Text="Cancel" WidthRequest="100" Grid.Row="0" Grid.Column="1"></Button>
            </Grid>

        </StackLayout>

    </ScrollView>
</xct:Popup>