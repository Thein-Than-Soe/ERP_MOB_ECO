<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:xct="http://schemas.microsoft.com/dotnet/2021/maui/communitytoolkit"
           Size="400,600"
    xmlns:dg="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
    x:Class="CS.ERP_MOB.Views.HCM.FrmHcmTrainPopup">

    <ScrollView>

        <StackLayout                              
                                VerticalOptions="FillAndExpand">
            <Entry
                            x:Name="entSearch"
                            Placeholder="Search" 
                           WidthRequest="200"
                            HorizontalOptions="End"                           
                            PlaceholderColor="{StaticResource OvaSearchInputColor}"
                            TextColor="{StaticResource OvaSearchInputColor}"
                            TextChanged="entSearch_TextChanged"/>

            <Picker x:Name="pikTraining" IsEnabled="True" ItemDisplayBinding="{Binding DAT_APPLICANT_TRAINING.TrainingName}" Title="Select Training"/>
            <Entry x:Name="entPlace"  Text="{Binding DAT_APPLICANT_TRAINING.Place}"  Placeholder="Place"/>
            <Entry x:Name="entTeacher"  Text="{Binding DAT_APPLICANT_TRAINING.Teacher}"  Placeholder="Teacher"/>
            <Picker x:Name="entScore" IsEnabled="True" ItemDisplayBinding="{Binding DAT_APPLICANT_TRAINING.Scroll}"  Title="Score"/>
            <Entry x:Name="entTrainBy"  Text="{Binding DAT_APPLICANT_TRAINING.TrainBy}"  Placeholder="Train by" />
            
            <Grid>
                <Button Text="Ok" WidthRequest="100" Grid.Row="0" Grid.Column="0" ></Button>
                <Button Text="Cancel" WidthRequest="100" Grid.Row="0" Grid.Column="1"></Button>
            </Grid>

        </StackLayout>

    </ScrollView>
</xct:Popup>