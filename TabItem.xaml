<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="CS.ERP_MOB.TabItem"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CS.ERP_MOB"
    xmlns:xct="http://schemas.microsoft.com/dotnet/2021/maui/communitytoolkit">
    <ContentView.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout
                x:Name="Home"
                HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                VerticalOptions="FillAndExpand">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Handle_Tapped" />
                </StackLayout.GestureRecognizers>

                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <!--  Icon with Badge  -->
                    <StackLayout
                        HorizontalOptions="CenterAndExpand"
                        Orientation="Horizontal"
                        Spacing="0"
                        VerticalOptions="CenterAndExpand">

                        <Frame
                            x:Name="IconFrame"
                            Padding="0"
                            BackgroundColor="transparent"
                            BorderColor="#CCCCCC"
                            CornerRadius="5"
                            HeightRequest="30"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="30">
                            <Image
                                x:Name="IconImage"
                                Aspect="AspectFit"
                                BackgroundColor="Green"
                                HorizontalOptions="Center"
                                Source="{Binding IconSource, Source={RelativeSource AncestorType={x:Type local:TabItem}}}"
                                VerticalOptions="Center">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Handle_Tapped" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>


                        <Label
                            x:Name="FontAwesomeIconLabel"
                            FontFamily="{StaticResource FontAwesomeSolid}"
                            FontSize="20"
                            Text=""
                            TextColor="{StaticResource ToolbarItemTextColor}"
                            VerticalOptions="Center" />

                        <Frame
                            x:Name="BadgeFrame"
                            Margin="-5,-5,0,0"
                            Padding="0"
                            BackgroundColor="Red"
                            CornerRadius="10"
                            HeightRequest="15"
                            HorizontalOptions="End"
                            IsVisible="False"
                            VerticalOptions="Start"
                            WidthRequest="15">
                            <Label
                                x:Name="BadgeCountName"
                                FontSize="10"
                                HorizontalOptions="Center"
                                Text="0"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </Frame>
                    </StackLayout>
                    <Label
                        x:Name="CaptionLabel"
                        FontSize="Micro"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="TailTruncation"
                        Text="Home"
                        TextColor="{StaticResource ToolbarItemTextColor}"
                        VerticalOptions="End" />
                </StackLayout>


            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>
